<div class="page-header">
  <h3>Arrival #<%= @arrival.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Train</dt>
      <dd><%= @arrival.train_id %></dd>

      <dt>Platform</dt>
      <dd><%= @arrival.platform %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/arrivals" class="btn btn-primary">
        Back
      </a>
      <a href="/arrivals/<%= @arrival.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_arrival/<%= @arrival.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
