<div class="page-header">
  <h1>
    Arrivals
    <a href="/arrivals/new" class="btn btn-lg btn-success">New Arrival</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date</th>
        <th>Train</th>
        <th>Platform</th>
        <th>Actions</th>
      </tr>

      <% @arrivals.each do |arrival| %>
      <tr>
        <td><%= arrival.created_at.in_time_zone("Central Time (US & Canada)").strftime("%Y-%m-%d") %></td>
        <td><%= arrival.train.arrives_at.strftime("%l:%M%P") %></td>
        <td><%= arrival.platform %></td>
        <td>
          <a href="/arrivals/<%= arrival.id %>" class="btn btn-primary">Show</a>
          <a href="/arrivals/<%= arrival.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_arrival/<%= arrival.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
